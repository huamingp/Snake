{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe 生成活动文件",
			"command": "C:\\mingw64\\bin\\gcc.exe",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				//"${workspaceFolder}/main/*.c",//编译工作区打开的文件架的目录下名为main的文件夹下的所有c文件
				//"${fileDirname}\\TempHumiNode.c",//编译指定的c文件
				//"${workspaceFolder}/*.c",//编译当前工作区的所有c文件
				"${workspaceFolder}/src/*.c",				
				"-I${workspaceFolder}/inc",//告诉编译器在当前工作区的inc文件夹下寻找头文件
				//编译器首先会在当前源文件所在的目录中搜索头文件。
				//然后在指定的头文件路径中搜索头文件（这里是当前工作区的inc文件夹），
				//最后编译器会搜索系统的标准库路径，
                //先找到先编译，在编译器找到同名头文件时，如果自定义的头文件和系统标准头文件同名，编译器会优先使用自定义的头文件
				"-o",
				"${workspaceFolder}/output/main.exe"//将生成的活动文件放在当前工作区的output文件夹下且名为main.exe

			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: C:\\mingw64\\bin\\gcc.exe"
		}
	]
}